{
    "compilerOptions": {
        "target": "es3",
        "module": "amd",
        "declaration": true,
        "noImplicitAny": true,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "outFile": "../js/nine-tails.js",
        "sourceMap": true
    },
    "buildOnSave": true,
    "compileOnSave": true,
    "filesGlob": [
        "./**/*.ts",
        "!./node_modules/**/*.ts"
    ],
    "files": [
        "./border-style-type.ts",
        "./border-style.ts",
        "./color-type.ts",
        "./color.ts",
        "./hue.ts",
        "./overflow-type.ts",
        "./overflow.ts",
        "./position-type.ts",
        "./position.ts",
        "./rule.ts",
        "./size-type.ts",
        "./size.ts",
        "./style.ts",
        "./theme.ts"
    ],
    "atom": {
        "rewriteTsconfig": true
    }
}
