{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "declaration": false,
        "noImplicitAny": true,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "sourceMap": true
    },
    "buildOnSave": true,
    "compileOnSave": true,
    "filesGlob": [
        "./**/*.ts",
        "!./node_modules/**/*.ts"
    ],
    "files": [
        "./border-style.spec.ts",
        "./color.spec.ts",
        "./hue.spec.ts",
        "./overflow.spec.ts",
        "./position-type.spec.ts",
        "./rule.spec.ts",
        "./size.spec.ts",
        "./style.spec.ts",
        "./theme.spec.ts"
    ],
    "atom": {
        "rewriteTsconfig": true
    }
}
