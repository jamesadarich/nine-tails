{
    "compilerOptions": {
        "target": "es3",
        "module": "amd",
        "declaration": false,
        "noImplicitAny": true,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "outDir": "./js",
        "sourceMap": true
    },
    "buildOnSave": true,
    "compileOnSave": true,
    "filesGlob": [
        "./**/*.ts",
        "!../node_modules/**/*.ts",
        "!../src/**/*.ts"
    ],
    "files": [
        "./nine-tails/border-style-type.ts",
        "./nine-tails/border-style.ts",
        "./nine-tails/color-type.ts",
        "./nine-tails/color.ts",
        "./nine-tails/hue.ts",
        "./nine-tails/overflow-type.ts",
        "./nine-tails/overflow.ts",
        "./nine-tails/position-type.ts",
        "./nine-tails/position.ts",
        "./nine-tails/rule.ts",
        "./nine-tails/size-type.ts",
        "./nine-tails/size.ts",
        "./nine-tails/style.ts",
        "./nine-tails/theme.ts",
        "./ts/app.ts",
        "./ts/demo.ts",
        "./ts/router.ts",
        "./ts/start.ts",
        "./ts/views/app-shell.ts",
        "./ts/views/pages/demos.ts"
    ],
    "atom": {
        "rewriteTsconfig": true
    }
}
